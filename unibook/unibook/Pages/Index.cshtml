@model unibook.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Unibook</h1>
    <p>
        Search for books:
    </p>
</div>
<div class="col-md-auto">
    <form asp-controller="Listings" asp-action="=" Index">
        <p>
            <input class="form-control" type="text" placeholder="Search" aria-label="Search">
        </p>
    </form>
</div>

<div class="mx-auto" style="width: 50%;">
    <ul class="list-group list-group-horizontal">
        <li class="list-group-item" style="width:100%">
            Title:<br />
            Price:<br />
            Location:<br />
        </li>
        <li class="list-group-item" style="width:100%">
            Title:<br />
            Price:<br />
            Location:<br />
        </li>
        <li class="list-group-item" style="width:100%">
            Title:<br />
            Price:<br />
            Location:<br />
        </li>
    </ul>
</div>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.book.Edition)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.book.Title)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.book.Listings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Listing_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Study)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
