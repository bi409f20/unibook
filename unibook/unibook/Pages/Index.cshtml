        </li>
    </ul>
</div>
<div>
    <h4>Books</h4>
    <hr />
    <p>@(Model.Books.Count) results</p>
    @foreach(var book in Model.Books)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => book.ISBN)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => book.ISBN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => book.Title)
            </dt>
            <dd class="col-sm-2">
                @Html.DisplayFor(model => book.Title)
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
